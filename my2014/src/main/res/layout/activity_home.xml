<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.mumuseng.my2014.Home">

    //标题栏
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal">
       //目标
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
             style="@style/tv_home_target"
            android:text="2048"
            android:id="@+id/tv_home_target"/>
       //分数
        <LinearLayout
       android:layout_width="0dp"
       android:layout_height="match_parent"
       android:layout_weight="1"
       android:orientation="vertical">
       <TextView
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_weight="2"
           style="@style/tv_home_score_name"
           android:text="score" />
       <TextView
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_weight="1"
           style="@style/tv_home_score_value"
           android:text="0"
           android:id="@+id/tv_home_score"
           />
        </LinearLayout>
       //记录
       <LinearLayout
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:layout_weight="1"
           android:orientation="vertical">
           <TextView
               android:layout_width="match_parent"
               android:layout_height="0dp"
               android:layout_weight="2"
               style="@style/tv_home_score_name"
               android:text="Record" />
           <TextView
               android:layout_width="match_parent"
               android:layout_height="0dp"
               android:layout_weight="1"
               style="@style/tv_home_score_value"
               android:text="0"
               android:id="@+id/tv_home_record"
               />
       </LinearLayout>

   </LinearLayout>
    //方块格
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/rl_home_content">

    </RelativeLayout>
    //底栏
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Revert"
            android:id="@+id/bt_home_revert"
            style="@style/bt_home"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="restart"
            android:id="@+id/bt_home_restart"
            style="@style/bt_home"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="options"
            android:id="@+id/bt_home_options"
            style="@style/bt_home"/>
    </LinearLayout>
</LinearLayout>
